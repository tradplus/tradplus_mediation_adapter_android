<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/cp_img_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />


    <ImageView
        android:id="@+id/cp_img_end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/cp_img_tips"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip" android:padding="10dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">


        <Button
            android:id="@+id/cp_view_countdown"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:background="@drawable/cp_btn_bg_pressed"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:visibility="gone" />


        <Button
            android:id="@+id/cp_view_skip"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>